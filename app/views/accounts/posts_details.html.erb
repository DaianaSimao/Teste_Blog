<!DOCTYPE html>
  <body>
  
    <div class="container mt-5">
      <br>
      <div class="row">
        <div class="col-lg-8">
          <!-- Post content-->
          <article>
            <!-- Post header-->
            <header class="mb-4">
              <!-- Post title-->
              <br>
              <% if user_signed_in? %>
                <%= link_to I18n.translate('buttons.new_post'),new_post_path, class: "btn btn-outline-dark ms-1", data: { turbo: false } %>
                <%= link_to "Upload Post",upload_post_path, class: "btn btn-outline-dark ms-1", data: { turbo: false } %>
              <% end %>
              <br>
              <br>
              <% @posts.each do |post| %>
                <h3 class="fw-bolder mb-1"><%=post.titulo.capitalize%></h3>
                <!-- Post meta content-->
                <div class="text-muted fst-italic mb-2">
                  <%= t('views.posted') %> <%= l(post.created_at) %> 
                  <%= t('views.by') %> <%= post.user.perfil.nome.capitalize %>
                </div>

                <!-- Post categories-->
              <% post.tags.each do |tag|%>
                <a class="badge bg-secondary text-decoration-none link-light" href="#!"><%= tag.nome %></a>
              <% end %>
              </header>
              <section>
                <p class="fs-5"><%= post.body %></p>
              </section>
               <div class="d-flex justify-content-start mb-4">
                <%= link_to t('buttons.comment'), post_path(post), class: "btn btn-outline-dark" %>
                <% if user_signed_in? && current_user.id == post.user_id %>
                  <%= button_to t('views.deletar_post'), post, method: :delete, data: { turbo_confirm: t('views.mensagem_deletar') }, class: "btn btn-outline-danger", style: "margin-left: 10px;" %>
                <% end %>
              </div>
            </article>
            <section class="mb-5">
              <div class="card bg-light">
                <div class="card-body">
                  <div class="comments-container" style="max-height: 300px; overflow-y: auto;">
                  <% if post.comentarios.any? %>
                    <% post.comentarios.each do |comentario| %>
                      <div class="card mb-4">
                        <div class="card-body">
                          <div class="d-flex mb-2">
                            <div class="flex-shrink-0">
                              <%= image_tag("perfil.png", width: 45, height: 50, class: "rounded-circle") %>
                            </div>
                            <div class="ms-3">
                              <div class="fw-bold"><%= comentario.autor %></div>
                              <%= comentario.body %>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  <% else %>
                    <div class="card mb-4">
                      <div class="card-body">
                        <div class="d-flex mb-2">
                          <div class="ms-3">
                            <div class="fw-bold"><%= t('views.nenhum_comentario') %></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  </div>
                </div>
              </div>
            </section>
          <% end %>
          <div class="digg_pagination mb-5">
            <%= will_paginate @posts , page_links: true %>
          </div>
        </div>
        <!-- Side widgets-->
        <div class="col-lg-4">
          <!-- Search widget-->
          <div class="card mb-4 " style="background-color: #DCDCDC;">
            <div class="card-header"><%= t('views.pesquisar_tags')%></div>
            <%= form_tag home_index_path, method: 'get', data: { turbo: false }  do %>
              <div class="card-body">
                <div class="input-group">
                  <%= text_field_tag :search, params[:searh], class: "form-control", id: "search-input"%>
                  <%= button_tag(value: "commit", type: 'submit', class: "btn btn-primary") do %>
                    <i class="bi bi-search-heart-fill"></i>
                  <% end %>
                </div>
                <div id="suggestions-container"></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
  </body>
</html>
