<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= render "users/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="row g-0 mt-5 mb-5 height-100">
      <div class="col-md-6">
        <div class="bg-dark p-4 h-100 sidebar">
          <ul class="chart-design">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
          </ul>
        </div>
      </div>
      <div class="col-md-6">
        <div class="bg-white p-4 h-100">
          <div class="p-3 d-flex justify-content-center flex-column align-items-center"> <span class="main-heading"><%= t('views.digite_email')%></span>
            <div class="form-data">
              <%= f.label "Email" %><br />
              <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control w-100" %>
              <%= f.hidden_field :locale, value: I18n.locale %>
            </div>
            <div class="signin-btn w-100 mt-2" style="margin-botton: 10px;">
              <%= f.submit t('views.enviar_redefinicao'), class: "btn btn-outline-dark" %>
            </div>
            <div class="signin-btn w-100 mt-2" style="margin-botton: 10px;">
              <%= link_to t("views.cancelar"),root_path, class: "btn btn-outline-warning", data: {turbo: false} %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
