<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="container">
    <div class="row g-0 mt-5 mb-5 height-100">
      <div class="col-md-6">
        <div class="bg-dark p-4 h-100 sidebar">
          <ul class="chart-design">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
          </ul>
        </div>
      </div>
      <div class="col-md-6">
        <div class="bg-white p-4 h-100">
            <div class="p-3 d-flex justify-content-center flex-column align-items-center"> <span class="main-heading"><%= t('views.editar')%></span>
                <div class="form-data">
                  <%= f.label "Email" %><br />
                  <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control w-100" %>
                </div>

               <%= f.fields_for :perfil_attributes, @perfil do |perfil_form| %>
                  <div class="form-data">
                    <%= perfil_form.label t('views.nome') %><br />
                    <%= perfil_form.text_field :nome, placeholder: t('views.nome'), class: "form-control w-100", required: true %>
                  </div>
                  <div class="form-data">
                    <%= perfil_form.label t('views.sobrenome') %><br />
                    <%= perfil_form.text_field :sobrenome, placeholder: t('views.sobrenome'), class: "form-control w-100", required: true %>
                  </div>
                  <div class="form-data">
                    <%= perfil_form.label t('views.bio') %><br />
                    <%= perfil_form.text_area :bio, placeholder: t('views.bio'), class: "form-control w-100", required: true %>
                  </div>
                <% end %>

              <div class="form-data">
                <%= f.label :password %> <i>(<%= t('views.confirmar_alteracao')%>)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control w-100", required: true %>
              </div>

                <div class="d-flex justify-content-between w-100 align-items-center">
                    <div class="form-check"> 
                      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                      <label class="form-check-label" for="flexCheckDefault">
                          Remember me </label> </div> 
                      </div>
                      <div class="signin-btn w-100 mt-2" style="margin-botton: 10px;">
                        <%= f.submit t('views.salvar_modificacao'), class: "btn btn-outline-dark" %><br>
                        <%= link_to t('views.cancelar'), user_details_path, class: "btn btn-outline-dark" %><br>
                      </div>
                      <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
  </div>
</div>





